<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopMyLocation">

    <fragment
        android:id="@+id/googleMap_ShopMyLocation"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/et_Shop_Map_Search"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/searchbox"
        android:ellipsize="end"
        android:hint="검색"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="@+id/googleMap_ShopMyLocation"
        app:layout_constraintTop_toTopOf="@+id/googleMap_ShopMyLocation"
        app:layout_constraintVertical_bias="0.015" />

    <Button
        android:id="@+id/btn_Shop_Map_Search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="240dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/find"
        app:layout_constraintBottom_toBottomOf="@+id/et_Shop_Map_Search"
        app:layout_constraintEnd_toEndOf="@+id/et_Shop_Map_Search"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="@+id/et_Shop_Map_Search"
        app:layout_constraintTop_toTopOf="@+id/et_Shop_Map_Search"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>